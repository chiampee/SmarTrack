# SmarTrack Environment Variables
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env files to Git!

# ============================================================================
# Backend Configuration
# ============================================================================

# MongoDB Atlas Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://api.your-domain.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret

# Application Settings
DEBUG=False
MAX_LINKS_PER_USER=40
MAX_STORAGE_PER_USER_BYTES=40960
RATE_LIMIT_REQUESTS_PER_MINUTE=60
ADMIN_RATE_LIMIT_REQUESTS_PER_MINUTE=300

# Admin Configuration
ADMIN_EMAILS=admin@example.com,admin2@example.com

# ============================================================================
# Frontend Configuration (Vite)
# ============================================================================

# Backend API URL
VITE_BACKEND_URL=https://your-backend.onrender.com

# Auth0 Frontend Configuration
VITE_AUTH0_DOMAIN=your-tenant.auth0.com
VITE_AUTH0_CLIENT_ID=your_frontend_client_id
VITE_AUTH0_AUDIENCE=https://api.your-domain.com

# ============================================================================
# Optional: Redis (for production rate limiting)
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# Optional: Sentry (for error monitoring)
# ============================================================================
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_DSN=https://your-backend-sentry-dsn@sentry.io/project-id

